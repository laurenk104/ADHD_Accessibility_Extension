{
    "name": "ADHD Extension",
    "description": "Text to speech for ADHD",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "popup.html",
      "default_title": "ADHD Extension",
      "default_icon": "ADHD_icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>", "file:///"],
        "js": ["content.js"],
        "css": ["conent.css"]
      }
    ],
    "background": {
      "service_worker": "reading.js",
      "type": "module"
    }
  }